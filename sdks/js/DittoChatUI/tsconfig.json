{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "src/test/setup.d.ts"
  ],
  "exclude": [
    "**/__tests__",
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules",
    "dist"
  ]
}